            <Insets left="30.0" />
         </HBox.margin>
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Label fx:id="sheduleIdLbl" prefWidth="78.5" text="Schedule_id" textFill="#8a888a">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Label fx:id="dayLbl" prefWidth="30.5" text="days" textFill="#8a888a">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Label fx:id="issuedDateLbl" prefWidth="77.5" text="Issued_date" textFill="#8a888a">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Label fx:id="expireDateLbl" prefWidth="75.0" text="Expire_date" textFill="#8a888a">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
