               <image>
                  <Image url="@../../material/icons8-delete-50%20(1).png" />
               </image>
               <effect>
                  <Glow />
               </effect>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
         </children>
      </Pane>
