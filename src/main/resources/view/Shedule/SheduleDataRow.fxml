<HBox fx:id="hBoxcontainer" alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="1100.0" spacing="90.0" style="-fx-border-color: #111010; -fx-border-width: 0 0 1 0;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fitness.controller.SheduleDataRowController">
   <children>
      <Label fx:id="clientIdLbl" prefWidth="64.5" text="Cliendt_Id" textFill="#8a888a">
